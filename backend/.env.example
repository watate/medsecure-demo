# GitHub
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_REPO=watate/tomcat

# Default baseline branch (usually "main")
BRANCH_BASELINE=main

# Devin API
DEVIN_API_KEY=

# Anthropic API (claude-opus-4-6)
ANTHROPIC_API_KEY=

# OpenAI API (gpt-5.3-codex)
OPENAI_API_KEY=

# Google Gemini API (gemini-3.1-pro-preview)
GEMINI_API_KEY=

# Remediation batching — max file groups per batch (default: 10)
BATCH_SIZE=10

# Database (use /data/medsecure.db for Docker with volume mount)
DATABASE_PATH=medsecure.db

# S3 backup
S3_BACKUP_BUCKET=
AWS_REGION=ap-southeast-1

# Auth — path to better-auth SQLite database
# For local dev, the default (../frontend/auth.db) works if backend runs from backend/
# For Docker, mount the auth.db volume and set the path accordingly
AUTH_DB_PATH=../frontend/auth.db

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=http://localhost:3000
